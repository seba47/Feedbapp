<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feedbapp.Views.LoginView">
  <StackLayout VerticalOptions="Center"  >
    <Entry Placeholder="username" WidthRequest="300" HorizontalOptions="Center" x:Name="etyUsername" Text="{Binding Username}"></Entry>
    <Entry IsPassword="True" Placeholder="password" WidthRequest="300" HorizontalOptions="Center" x:Name="etyPassword" Text="{Binding Password}"></Entry>
    <Button BackgroundColor="#1fd660" Text="Login" WidthRequest="200" HorizontalOptions="Center" Clicked="OnLoginClicked"></Button>
  </StackLayout>
</ContentPage>