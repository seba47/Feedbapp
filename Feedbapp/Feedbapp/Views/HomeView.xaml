<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feedbapp.Views.HomeView">
  <StackLayout HorizontalOptions="Center" WidthRequest="250">
    <StackLayout Padding="0,50,0,50">
      <Label  FontAttributes="Bold" XAlign="Center" Text="Solicita u ofrece Feedback a tus compañeros de UruIT rápida y sencillamente." FontSize="20" TextColor="White"></Label>
    </StackLayout>
    <StackLayout Padding="0,0,0,60">
      <Button Text="Solicitar Feedback" WidthRequest="250" HeightRequest="100" Clicked="GoToRequestView" FontSize="24"></Button>
    </StackLayout>
    <StackLayout>
      <Button Text="Ofrecer Feedback" WidthRequest="250" HeightRequest="100" Clicked="GoToOfferView" FontSize="24" ></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>