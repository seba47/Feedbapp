<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Feedbapp.ViewModels;assembly=Feedbapp"
             x:Class="Feedbapp.Views.RequestView" BackgroundColor="#212830">
  <ContentPage.BindingContext>
    <local:RequestViewModel />
  </ContentPage.BindingContext>
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Picker Title="Nombre" x:Name="pkrNombre"></Picker>
    <Editor Text="{Binding Comments}" HeightRequest="250"></Editor> 
    <Button BackgroundColor="#1fd660" Text="Solicitar feedback" WidthRequest="250" HeightRequest="70" HorizontalOptions="Center" Clicked="OnRequestClicked"></Button>
  </StackLayout>
</ContentPage>