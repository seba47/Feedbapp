<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feedbapp.Views.SentView">
  <StackLayout>
    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
      <Label Text="¡Gracias!" VerticalOptions="Center" HorizontalOptions="Center" FontSize="50" ></Label>
      <Label x:Name="LblMain" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" XAlign="Center" />

      <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Padding="30">
        <Button Text="Nueva Solicitud" Clicked="NewRequestClicked" HorizontalOptions="FillAndExpand"></Button>
        <Button Text="Home"  Clicked="ExitClicked" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
    </StackLayout>
  </StackLayout>
</ContentPage>